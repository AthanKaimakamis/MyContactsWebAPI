@model IEnumerable<MyContactsApp.Models.Contact>

@{
    ViewBag.Title = "My Contacts";
    Layout = "_Layout";
    
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">My Contacts</h2>
        </div>
        <div align="right" class="col-6">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-primary">
                Create New
            </a>
        </div>
    </div>
    <br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            </thead>
            <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td width="35%">@contact.FirstName</td>
                    <td width="35%">@contact.LastName</td>
                    @* <td width="20%"> *@
                    @*     <div class="btn-group d-flex" role="group"> *@
                    @*         <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id"  *@
                    @*            class="btn btn-success mx-1">Edit</a> *@
                    @*         <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" *@
                    @*            class="btn btn-danger mx-1 ">Delete</a> *@
                    @*     </div> *@
                    @* </td> *@
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No contacts created yet!</p>
    }

</div>