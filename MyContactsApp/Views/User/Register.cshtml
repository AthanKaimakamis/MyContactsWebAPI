@model MyContactsApp.Models.LocalUser
@{
    ViewBag.Title = "Register";
  Layout = "_Layout";
}

<style>              
  input{             
  width: 200px;      
  min-height: 50px;  
  font-size: 1.2rem; 
  }                  
</style>             

<div class="container col-lg-6  col-md-8  col-12 border border-info rounded">
  <div class="m-4">
    <h2 class="text-info text-center">Register</h2>
  </div>
  <br/>
  <form method="post" asp-action="Register">
    <div class="form-group mb-2">
      <input asp-for="FirstName" placeholder="first name" class="form-control" required/>
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
      <input asp-for="LastName" placeholder="last name" class="form-control" required/>
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
      <input asp-for="Email" placeholder="email" class="form-control" required/>
      <span class="text-danger">@TempData["UserExist"]</span>
    </div>
    <br/>
    <div class="col-auto mb-2">
      <input name="password" type="password" placeholder="password" class="form-control" required/>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
      <input name="confirmPassword" placeholder="verify password" type="password" class="form-control" required/>
      <span asp-validation-for="Password" class="text-danger"></span>
      <span class="text-danger">@TempData["VerifyPassword"]</span>
    </div>
    <div align="center" class="form-group m-3">
      <button type="submit" class="btn btn-success">Register</button>
    </div>
  </form>              
</div>








